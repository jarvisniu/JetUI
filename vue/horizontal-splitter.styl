@require "_theme.styl"

.horizontal-splitter
  display: flex
  box-sizing: border-box
  margin: 8px
  height: 100%
  border: solid 1px gray
  -webkit-user-select: none

.horizontal-splitter > .panel
  flex: 1
  height: 100%
  -webkit-user-select: none

.horizontal-splitter > .panel > *
  height: 100%

.splitter-handle
  position: relative
  left: 0
  width: 8px
  height: 100%
  margin: 0 -4px
  cursor: w-resize;

.splitter-line
  height: 100%
  width: 1px
  margin-left: 4px
  background-color: silver
